<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="brcdn-base" type="host">cdn.brcdn.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="brcdn-img" type="host">*.brsrvr.com</value>
                <value id="bloomreach-cloud" type="host">*.bloomreach.cloud</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="dxpapi-conn" type="host">*.dxpapi.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
